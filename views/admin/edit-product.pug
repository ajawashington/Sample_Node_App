extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/product.css")

main
    form.product-form(action="/admin/#{if (editing) #{edit-product} else #{add-product}}" method="POST")
        .form-control
            label(for="title") Title
            input(type="text" name="title" id="title" value="#{if (editing)  #{product.title} }")
        .form-control
            label(for="imageUrl") Image URL
            input(type="text" name="imageUrl" id="imageUrl" value="#{ if (editing) #{product.imageUrl} }")
        .form-control
            label(for="price") Price
            input(type="number" name="price" id="price" step="0.01" value="#{ if (editing) #{product.price} }")
        .form-control
            label(for="description") Description
            textarea(name="description" id="description" rows="5") 
                    if (editing) #{product.descriptiion}
            if (editing) 
                input(type="hidden" value="<%= product.id %>" name="productId")
        button.btn(type="submit")
            if (editing) #{Update Product} 
            else #{Add Product}