extends ../layouts/main-layout.pug 

block styles
    link(rel="stylesheet" href="/css/forms.css")
    link(rel="stylesheet" href="/css/product.css")

block content
    main
        form.product-form(method="POST" action=`/admin/add-product`)
            .form-control
                label(for="title") Title
                input(type="text" name="title" id="title" value=`${ editing ? product.title : ''  }`)
            .form-control
                label(for="imageUrl") Image URL
                input(type="text" name="imageUrl" id="imageUrl" value=`${ editing ? product.imageUrl : ''  }`)
            .form-control
                label(for="price") Price
                input(type="number" name="price" id="price" step="1" value=`${ editing ? product.price : ''  }`)
            .form-control
                label(for="description") Description
                textarea(name="description" id="description" rows="5") 
                if editing
                    #{product.description}
            //- if editing
            //-     input(type="hidden" value="#{product.id}" name="productId")
            button.btn(type="submit") Add Product